<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mazonna.bubbly">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:logo="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:logo="@drawable/logo"
            android:screenOrientation="portrait"
            android:label="Home">
        </activity>
        <activity android:name=".NewExam" android:label="New Exam"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home">
        </activity>
        <activity android:name=".Exams" android:label="Exams"
            android:parentActivityName=".Home">
        </activity>
        <activity android:name=".GradesSheet"
            android:screenOrientation="portrait"
            android:parentActivityName=".Exams"
            android:label="Grads Sheet">
        </activity>
    </application>

</manifest>